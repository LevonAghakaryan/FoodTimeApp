@model FoodTime.Domain.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Ստեղծել Ապրանք";
}
<link rel="stylesheet" href="~/css/create-product.css" asp-append-version="true" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9 col-sm-12">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h3 class="font-weight-light my-3">Ստեղծել Ապրանք</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Product" asp-action="CreateProduct" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Ապրանքի անունը</label>
                            <input asp-for="Name" class="form-control" placeholder="Մուտքագրեք ապրանքի անունը" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Նկարագրություն</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Մուտքագրեք ապրանքի նկարագրությունը" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Գին</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Մուտքագրեք ապրանքի գինը" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Stock" class="form-label">Քանակ</label>
                            <input asp-for="Stock" type="number" class="form-control" placeholder="Մուտքագրեք ապրանքի քանակը" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">Նկարի հղում</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="Մուտքագրեք նկարի հղումը (օրինակ՝ /images/1.jpg)" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Ստեղծել</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>